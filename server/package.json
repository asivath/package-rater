{
  "name": "@package-rater/server",
  "version": "1.0.0",
  "keywords": [],
  "license": "ISC",
  "type": "module",
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf tsconfig.tsbuildinfo coverage node_modules",
    "dev": "concurrently \"tsc -b -w\" \"nodemon --watch dist dist/index.js\"",
    "lint": "eslint '**/*.{ts,mjs,json}' --fix",
    "restart": "pm2 restart dist/index.js",
    "start": "pm2 start dist/index.js",
    "stop": "pm2 stop dist/index.js",
    "test": "vitest run",
    "test:ci": "vitest run --no-color",
    "test:coverage": "vitest run --coverage",
    "test:coverage-ci": "vitest run --coverage --no-color",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.678.0",
    "@fastify/cors": "^10.0.1",
    "@fastify/static": "^8.0.2",
    "@package-rater/shared": "workspace:1.0.0",
    "dotenv": "^16.4.5",
    "esbuild": "^0.24.0",
    "fastify": "^5.0.0",
    "node-cache": "^5.1.2",
    "p-queue": "^8.0.1",
    "pm2": "^5.4.2",
    "semver": "^7.6.3",
    "tar": "^7.4.3",
    "unzipper": "^0.12.3",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.9.1",
    "@types/adm-zip": "^0",
    "@types/eslint__eslintrc": "^2.1.2",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.7.5",
    "@types/semver": "^7",
    "@types/unzipper": "^0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vitest/coverage-istanbul": "2.1.2",
    "adm-zip": "^0.5.16",
    "concurrently": "^9.0.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "typescript": "5.5.4",
    "typescript-eslint": "^8.8.0",
    "vitest": "2.1.2"
  }
}
